<% layout('campgrounds/layouts/boilerplate.ejs') %> 
<div class="row">
    <h1 class="text-center"> New Campground </h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title"> Title </label>
                <input class="form-control" type="text" placeholder="Title" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Filled!
                </div>  
            </div>
    
            <div class="mb-3" >
                <label class="form-label" for="location"> Location </label>
                <input class="form-control" type="text" placeholder="Location" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Filled!
                </div>  
            </div>

            <div class="mb-3" >
                <label class="form-label" for="image"> Image URL </label>
                <input class="form-control" type="text" placeholder="URL" id="image" name="campground[image]" required>
                <div class="valid-feedback">
                    Filled!
                </div>  
            </div>

            <div class="mb-3" >
                <label class="form-label" for="price"> Price </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label"> $ </span>
                <input class="form-control" type="text" placeholder="0.00" aria-describedby="price-label" id="price" name="campground[price]" required>
                </div>
                <div class="valid-feedback">
                    Filled!
                </div>  
            </div>

            <div class="mb-3" >
                <label class="form-label" for="description"> Description </label>
                <textarea class="form-control" type="text" placeholder="Description" id="description" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Filled!
                </div>  
            </div>

            <div class="mb-3">
            <button class="btn btn-success"> Add campground </button>
            </div>      
    
    
    
        </form>
        <a href="/campgrounds"> All Campgrounds </a>
    </div>
</div>
    

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.validated-form')

  // Loop over them and prevent submission
  Array.from(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>